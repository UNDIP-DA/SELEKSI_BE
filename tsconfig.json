{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "paths": {
      "express": ["./node_modules/@types/express"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
